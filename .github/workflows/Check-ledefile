name: Check-ledefile

env:
  REPO_URL: https://github.com/JHPatchouli/lede
  REPO_BRANCH: master

on:
  workflow_dispatch:
#  schedule:
#    - cron: 0 */18 * * *

jobs:
  check:
    runs-on: ubuntu-latest

    steps:

    - name: Clone
      id: Clone
      run: |
        git clone $REPO_URL
        cd ./lede && tree
